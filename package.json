{
  "name": "cspell-tool",
  "version": "0.4.4",
  "description": "A command line tool for spell checking.",
  "keywords": [
    "cspell",
    "spell",
    "spell-check"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/jellydn/cspell-tool"
  },
  "license": "MIT",
  "type": "module",
  "exports": {
    ".": "./dist/index.js"
  },
  "module": "src/index.ts",
  "types": "src/index.ts",
  "bin": {
    "cspell-tool": "./dist/index.js"
  },
  "files": [
    "src",
    "dist/index.js",
    "package.json"
  ],
  "scripts": {
    "build": "bun build src/index.ts --outdir ./dist --target node --format esm --minify --external zx",
    "clean": "rm -rf cli && echo 'Done.'",
    "dev": "bun run --watch ./src/index.ts",
    "format": "biome format --write .",
    "lint": "biome lint --apply .",
    "np": "bun install && bun run build && bunx np@latest --no-tests",
    "test": "vitest",
    "test:coverage": "vitest run --coverage",
    "test:ui": "vitest --ui",
    "test:watch": "vitest --watch",
    "typecheck": "tsc --noEmit"
  },
  "dependencies": {
    "consola": "3.4.2",
    "zx": "8.5.3"
  },
  "devDependencies": {
    "@biomejs/biome": "1.9.4",
    "@skypack/package-check": "0.2.2",
    "@types/consola": "2.2.8",
    "@vitest/coverage-v8": "3.1.1",
    "@vitest/ui": "3.1.1",
    "bun-types": "latest",
    "typescript": "5.8.3",
    "vite": "6.3.1",
    "vitest": "3.1.1"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "np": {
    "yarn": false
  }
}
