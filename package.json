{
  "name": "cspell-tool",
  "version": "0.4.3",
  "description": "A command line tool for spell checking.",
  "keywords": [
    "cspell",
    "spell",
    "spell-check"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/jellydn/cspell-tool"
  },
  "license": "MIT",
  "type": "module",
  "exports": {
    ".": "./dist/index.js"
  },
  "module": "src/index.ts",
  "types": "src/index.ts",
  "bin": {
    "cspell-tool": "./dist/index.js"
  },
  "files": [
    "src",
    "dist/index.js",
    "package.json"
  ],
  "scripts": {
    "build": "bun build src/index.ts --outdir ./dist --target node --format esm --minify --external zx",
    "clean": "rm -rf cli && echo 'Done.'",
    "dev": "bun run --watch ./src/index.ts",
    "format": "biome format --write .",
    "lint": "biome lint --apply .",
    "np": "bun install && bun run build && bunx np@latest --no-tests",
    "typecheck": "tsc --noEmit"
  },
  "dependencies": {
    "consola": "3.2.3",
    "zx": "8.1.5"
  },
  "devDependencies": {
    "@biomejs/biome": "1.8.3",
    "@skypack/package-check": "0.2.2",
    "@types/consola": "2.2.5",
    "bun-types": "latest",
    "typescript": "5.5.4"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "np": {
    "yarn": false
  }
}
